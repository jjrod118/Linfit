s = (2073600, 6)
gauss = np.zeros(s)
gauss[:,0] = 1
xpos = np.arange(1080)
for k in range(1080):
	gauss[(k * 1080) : (k + 1) * 1080, 1] = xpos
	gauss[(k * 1080) : (k + 1) * 1080, 2] = k
	gauss[(k * 1080) : (k + 1) * 1080, 3] = xpos ** 2
	gauss[(k * 1080) : (k + 1) * 1080, 4] = k ** 2
	gauss[(k * 1080) : (k + 1) * 1080, 5] = xpos * k
tgauss = np.transpose(gauss)
one = np.matmul(tgauss, gauss)
two = np.linalg.inv(one)
